<div class="post-list default">
	<div class="row">
		{{#foreach posts columns=3}}
			{{#if @rowStart}}
			<div class="col-md-12 large-item {{post_class}}">
				<div class="post-inner">
					<div class="post-header">         
			            <div class="header-wrap">
			            	{{#if tags}}
		                    <div class="post-tags">{{tags separator=" "}}</div>
		                    {{/if}}
			                <h2 class="post-title">
			                    <a href="{{url}}">{{{title}}}</a>
			                </h2>
			                <div class="top-meta">
			                	{{author}} / <time datetime="{{date published_at format="YYYY-MM-DD"}}"> {{date published_at}} </time>
			                </div>
			                <div class="post-desc">
			                    {{excerpt words="40"}} ...
			                </div>
			                <div class="bottom-meta">
			                	<a href="{{url}}" class="read-more">                            
			                        Read More <i class="fa fa-long-arrow-right"></i>
			                    </a>				                
			                    <div class="share">                            
			                        <i class="fa fa-share-alt"></i>
			                        <div class="share-box full-color">
			                        	{{>misc/share-icons}}
			                        </div>
			                    </div>
				            </div>
			            </div>
			        </div>				
				</div>
			</div>
			{{else}}
			<div class="col-md-6 small-item {{post_class}}">
				{{#if image}}
					<a href="{{url}}" class="post-header-image" style="background-image: url({{image}})"></a>
				{{/if}}
				<div class="post-inner">
					<div class="post-header">
			            <div class="header-wrap">
			                {{#if tags}}
		                    <div class="post-tags">{{tags separator=" "}}</div>
		                    {{/if}}
			                <h2 class="post-title">
			                    <a href="{{url}}">{{{title}}}</a>
			                </h2>
			                <div class="top-meta">
			                	{{author}} / <time datetime="{{date published_at format="YYYY-MM-DD"}}"> {{date published_at}} </time>
			                </div>
			                <div class="post-desc">
			                    {{excerpt words="15"}} ...
			                </div>
			                <div class="bottom-meta">
			                	<a href="{{url}}" class="read-more">                            
			                        Read More <i class="fa fa-long-arrow-right"></i>
			                    </a>				                
			                    <div class="share">                            
			                        <i class="fa fa-share-alt"></i>
			                        <div class="share-box full-color">
			                        	{{>misc/share-icons}}
			                        </div>
			                    </div>
				            </div>
			            </div>
			        </div>
				</div>
			</div>
			{{/if}}
		{{/foreach}}
	</div>
</div>
{{#if pagination}}
<div class="row">
	<div class="col-md-12">
	    <div class="pagination-wrap">
	        {{pagination}}  
	    </div>
	</div>
</div>
{{/if}}