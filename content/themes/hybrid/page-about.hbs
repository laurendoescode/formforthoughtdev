{{!< about-layout}}
{{#post}}
{{>banner/post}}
<div class="main-wrap"> 
	<div class="row">		       
	    <div class="main-content {{#has tag="_full_width"}}col-md-12{{else}}col-md-9 {{#has tag="_left_sidebar"}}col-md-push-3{{/has}} {{/has}}">
	        <div class="body-content" role="main">
	        	<div class="post-content">	        		
	        		<div class="top-meta clearfix">
	                    <div class="content-ert">
	                    <span class="ert-comment-count"></span>
	                    </div>
	                    <!--<div class="post-comments">
	                    	<span class="disqus-comment-count" data-disqus-identifier="{{id}}"></span>
	                    </div>-->
	        		</div>
	        		<div class="content-area">
		        		{{content}}
						<!-- Begin MailChimp Signup Form -->
					<div class="contact-form">
						<div id="mc_embed_signup">
							<form action="////laurendo.us12.list-manage.com/subscribe/post?u=5cfa1deacef4ab6a0366ad20f&amp;id=5fa98906f9" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
							<div id="mc_embed_signup_scroll">
							<div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
							<div class="mc-field-group">
								<label for="mce-EMAIL">Email Address<span class="asterisk">*</span>
							</label>
								<input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
							</div>
							<div class="mc-field-group">
								<label for="mce-FNAME">First Name </label>
								<input type="text" value="" name="FNAME" class="" id="mce-FNAME">
							</div>
							<div class="mc-field-group">
								<label for="mce-LNAME">Last Name </label>
								<input type="text" value="" name="LNAME" class="" id="mce-LNAME">
							</div>
							<div class="mc-field-group input-group">
							    <strong>What are you contacting about?</strong>
							    <ul><li><input type="radio" value="Have a question or article request?" name="MMERGE4" id="mce-MMERGE4-0"><label for="mce-MMERGE4-0">   Have a question or article request?</label></li>
							<li><input type="radio" value="Want to hire me? Great - drop me an email below" name="MMERGE4" id="mce-MMERGE4-1"><label for="mce-MMERGE4-1">   Want to hire me? Great - drop me an email below</label></li>
							<li><input type="radio" value="Other" name="MMERGE4" id="mce-MMERGE4-2"><label for="mce-MMERGE4-2">   Other</label></li>
							</ul>
							</div>
							<div class="mc-field-group" id="box-message">
								<label for="mce-MMERGE3">Write your message</label>
								<input type="text" value="" name="MMERGE3" class="" id="mce-MMERGE3" style="height:100px;">
							</div>
								<div id="mce-responses" class="clear">
									<div class="response" id="mce-error-response" style="display:none"></div>
									<div class="response" id="mce-success-response" style="display:none"></div>
								</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
							    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_7927f56ea83b3cedeed6676ff_fd9dba21ac" tabindex="-1" value=""></div>
							    <div class="clear"><input type="submit" value="Send" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
							    </div>
							</form>
						</div>
						<script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script><script type='text/javascript'>(function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[1]='FNAME';ftypes[1]='text';fnames[2]='LNAME';ftypes[2]='text';fnames[4]='MMERGE4';ftypes[4]='radio';fnames[3]='MMERGE3';ftypes[3]='text';}(jQuery));var $mcj = jQuery.noConflict(true);</script>
	<!--End mc_embed_signup-->

							<!--end about content-->

			        		<div class="share-box full-color">
					            <span id="last"></span>   
			        			<span class="box-title">
			        				Spread the word:
			        			</span >
		                    	{{>misc/share-icons}}
		                    </div>        		   			        			
			        		{{#author}}	
							<footer class="post-footer clearfix">              	            
				                <div  itemprop="author" itemscope itemtype="http://schema.org/Person" class="post-author">
				                    {{#if image}}                    
				                    <div class="avatar">
				                        <img class="img-reponsive" itemprop="image" src="{{image}}" alt="{{name}}" />
				                    </div>
				                    {{/if}}
				                    <div class="post-author-content">
					                    <h4 class="author-name">
					                    	Written by <a href="{{url}}" itemprop="url" class="post-author-name"><span itemprop="name">{{name}}</span></a>
					                    </h4>	                    
					                    <div class="author-info">
					                    	{{#if location}}<i class="fa fa-home"></i> <span>{{location}}</span>{{/if}}
					                    	{{#if website}}<i class="fa fa-globe"></i> <a href="{{website}}">{{website}}</a>{{/if}}
					                    </div>                                    
					                    <p itemprop="description">
					                    	{{#if bio}}
					                        	{{bio}}
					                        {{else}}
					                     
					                        {{/if}}                    	
					                    </p>
					                 </div>
				                    <!--CTA slidebox copy-->
				                    <!-- Begin MailChimp Signup Form -->
										<div id="slidebox">
										<a class="close">&nbsp;</a>
										<div id="mc_embed_signup">
											<form action="//hireadesigner.us12.list-manage.com/subscribe/post?u=b50c0b7c0a506915bd9f510e5&amp;id=bd0c31cbdf" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
											    <div id="mc_embed_signup_scroll">
												<p class="subscribe">Subscribe to</p>
												<h2>FFT's top articles</h2>
													<div class="mc-field-group">
														<label for="mce-EMAIL"></label>
														<p>Subscribe &amp; keep up to date with the latest research and design psychology insights</p>
														<br>
														<input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
													</div>
													<div id="mce-responses" class="clear">
														<div class="response" id="mce-error-response" style="display:none"></div>
														<div class="response" id="mce-success-response" style="display:none"></div>
													</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
											    	<div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_5cfa1deacef4ab6a0366ad20f_5fa98906f9" tabindex="-1" value=""></div>
											    	<div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
											    </div>
											</form>
										</div>
										<div id="slidebox"><a class="close">&nbsp;</a><a href="http://yoursite.com/landing-page" target="_blank"><img class="shadow alignCenter" style="width: 90%; height: auto;" src="http://yoursite.com/images/cta-image.png"></a>
										</div>
									</div>
								</div>
								<!--End mc_embed_signup-->
								<!--CTA slidebox copy-->
			                </div>	            
				        </footer>
				        {{/author}}
				        {{>misc/next-prev-posts}}
				        {{>misc/comment}}
				    </div>
	        	</div>               
	        </div>
	    </div>
	    {{^has tag="_full_width"}}
	    <div class="sidebar col-md-3 {{#has tag="_left_sidebar"}}col-md-pull-9{{/has}}">
	    {{>sidebar/default}} 
	    </div>
	    {{/has}}
	</div>
</div>
{{/post}}